<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndiceMC.MainPage">

    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center">
        
        <Label Text="Calcular el IMC"/>
        <Entry Placeholder="Altura" x:Name="txtAltura"
               Keyboard="Numeric"/>
        <Entry Placeholder="Peso" x:Name="txtPeso"
               Keyboard="Numeric"/>
        <Entry Placeholder="Resultado" x:Name="txtResultado"
               IsEnabled="False"/>
        <Button Text="Calcular" x:Name="btnCalcular"
                Clicked="btnCalcular_Clicked"/>
        <Button Text="Obtener Peso Mx" x:Name="btnObtenerDatos"
                Clicked="btnObtenerDatos_Clicked"/>
    </StackLayout>

</ContentPage>
